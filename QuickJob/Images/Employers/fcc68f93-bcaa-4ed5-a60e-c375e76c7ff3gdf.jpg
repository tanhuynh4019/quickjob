function initFb()
{
    window.fbAsyncInit = function() {
        FB.init({
            appId      : '1478418029113221',
            xfbml      : false,
            version    : 'v3.1',
            cookie     : true,
        });
    };

    (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
}
function loginFacebook() {
    FB.login(function(response) {
        if (response.authResponse) {
            // console.log(response.authResponse);
            var data = {
                accessToken: response.authResponse.accessToken,
                userID: response.authResponse.userID,
                // _token: $('meta[name="csrf-token"]').attr('content'),
            };
            $.post('https://www.topcv.vn/ajax-login-facebook', data, function (response) {
                if (response.status == 'success') {
                    if (callbackRedirectUrl) {
                        if (isCallbackDownload) {
                            window.open(callbackRedirectUrl);
                            document.location.reload();
                        } else {
                            document.location.href = callbackRedirectUrl;
                        }
                    } else {
                        document.location.reload();
                    }
                } else {
                    showLoginAjaxError(response.message);
                }
            });
        } else {
            console.log('User cancelled login or did not fully authorize.');
        }
    }, {
        scope: 'email',
        return_scopes: true
    });
}
</script>
