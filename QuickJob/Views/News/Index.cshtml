                        </div>
                        <ul class="blog-meta">
                            <li class="meta-item blog-lesson">
                                <span class="meta-value"> April 13, 2020 </span>
                            </li>
                            <li class="meta-item blog-students">
                                <span class="meta-value"> 6min read</span>
                            </li>
                        </ul>
                        <a href="#featuredposts" class="btn btn-style btn-outline mt-4">
                            All featured
                            posts
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-md-6 mt-md-0 mt-5">
                <div class="list-view list-view1">
                    @foreach (var item in db.News.Where(n => n.cate_id == 2 && n.news_active == true && n.news_option == true && n.news_bin == false && n.User.user_active == true).OrderByDescending(n => n.news_datecreate))
                    {
                        <div class="grids5-info">
                            <a href="/News/Details?id=@item.news_id" class="d-block zoom">
                                <img src="~/Images/News/@item.news_image" alt=""
                                     class="img-fluid radius-image news-image">
                            </a>
                            <div class="blog-info align-self">
                                <a href="/News/Details?id=@item.news_id" class="blog-desc1">
                                    @item.news_title
                                </a>
                                <div class="author align-items-center mt-3 mb-1">
                                    <a href="#author">Nhà tuyển dụng: @item.User.employer_company</a> 
                                </div>
                                <ul class="blog-meta">
                                    <li class="meta-item blog-lesson">
                                        <span class="meta-value"> @item.news_datecreate </span>
                                    </li>
                                    <li class="meta-item blog-students">
                                        <span class="meta-value"> @db.Categorys.Find(item.news_genres).cate_name </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 trending mt-lg-0 mt-5">
        @if (coo.Cookie() != null)
        {
            <h3 class="section-title-left"><i style="cursor: pointer" onclick="window.location.href='/News/Create'" class="fa fa-plus-circle">&nbsp;</i>Ứng viên hỏi </h3>
        }

        @foreach (var item in db.News.Where(n => n.cate_id == 1 && n.news_active == true && n.news_option == true && n.news_bin == false && n.User.user_active == true).OrderByDescending(n => n.news_datecreate))
