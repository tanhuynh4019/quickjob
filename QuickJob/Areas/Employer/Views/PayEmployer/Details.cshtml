@using Model.EF;
@using QuickJob.Function;
@model Pakage
@{
    ViewBag.Title = "Xác nhận thanh toán";
    Layout = "~/Areas/Employer/Views/Shared/_Layout.cshtml";

    var coo = new FunctionController();
    var id = coo.CookieIDEm();

    var money = Model.pakage_money * (1 - (float)Model.pakage_precent / 100);
}
<link href="~/Content/Price.css" rel="stylesheet" />
<section class="intro-single">
    
</section>
<!--/ Intro Single End /-->
<!--/ News Grid Star /-->
<section class="news-grid grid">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="py-4 d-flex flex-row">
                    <h5><span class="fa fa-check-square-o"></span><b>@Model.pakage_name</b> | </h5><span class="pl-2">Thanh toán nhanh chóng</span>
                </div>
                <strike><h4 class="green">Giá gốc: @Model.pakage_money.Value.ToString("#,###") VNĐ</h4></strike>
                <h4 class="text-danger">Giá khuyến mãi: <b>@money.Value.ToString("#,###")</b> VNĐ / 1 tháng</h4>
                <div class="d-flex pt-2">
                    <div>
                        <p><b></b></p>
                    </div>
                </div>
                <hr />
                <h3>Bước 1: Xác nhận gói:</h3>
                <p class="mt-2" style="color: black">
                    <b>Tên gói: </b> @Model.pakage_name
                    <br />
                    <b>Nâng cấp cho: </b> @id.user_email
                    <br />
                    <b>Với giá: </b> @money.Value.ToString("#,###") VNĐ trong 1 tháng
                    <br />
                    <b>Ngày hết hạn dự tính </b> @DateTime.Now.AddMonths(1)
                    <br />
                    <b>Ngày bắt đầu dự tính </b> @DateTime.Now
                </p>
                <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
                <h3>Bước 2: Chọn hình thức thanh toán</h3>
                <br />
                <b class="text-danger"><i class="fa fa-bell">&nbsp;</i> Bấm vào hình thức sẽ tự động thanh toán</b>
                <button class="w-100 bg-white mt-3" style="border: 2px solid  #ae2070;" onclick="window.location.href = '/Employer/PayEmployer/PayMoMo/@Model.pakage_id'">
                    <div style="padding: 10px">
                        <div class="row">
                            <div class="col-lg-3">
                                <img src="~/Images/Users/logo.png" class="w-100" style="height: 100px" />
                            </div>
                            <div class="col-lg-9">
                                <h3 class="text-left">Thanh toán bằng ví MOMO</h3>
                                <div class="text-left">
                                    Quý khách vui lòng cài đặt Ví MoMo trước khi thanh toán. <a target="_blank" href="https://momo.vn/huong-dan/huong-dan-tai-va-cai-dat-vi-momo"><u>Hướng dẫn</u></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </button>
                <div class="rounded bg-light d-flex mt-3">
                    <div class="p-2">QuickJob đảm bảo mọi chức năng của nhà tuyển dụng. Sau khi nâng cấp, QuickJob sẽ tăng cường khả năng kiếm hồ sơ đồng thời nhà tuyển dụng cũng sẽ sở hữu được nhiều trải nghiệm tuyệt vời cùng QuickJob</div>
                    <div class="ml-auto p-2"><i class="fa fa-check-circle text-success"></i></div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="snip1223">
                    <div class="plan @(Model.pakage_id == 5 ? "featured" : "") w-100">
                        <header>
                            <h3 class="plan-title">@Model.pakage_name</h3>
                            @if (Model.pakage_id == 5)
                            {
                                <h3 class="text-white"><strike>@Model.pakage_money.Value.ToString("#,###")</strike> VNĐ</h3>
                                <h3 class="font-weight-bold text-white">@money.Value.ToString("#,###") VNĐ</h3>
                            }
                            else
                            {
                                <h3><strike>@Model.pakage_money.Value.ToString("#,###")</strike> VNĐ</h3>
                                <h3 class="font-weight-bold">@money.Value.ToString("#,###") VNĐ</h3>
                            }
                            <div class="plan-cost"><span class="plan-price">@Model.pakage_precent</span><span class="plan-type">%</span></div>
                        </header>
                        @Html.Raw(Model.pakage_note)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

