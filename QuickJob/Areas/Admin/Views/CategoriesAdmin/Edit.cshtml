@model Model.EF.Category

@{
    ViewBag.Title = "Sừa nghành nghề " + Model.cate_name;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="card">
        <div class="card-header">
            @ViewBag.Title <br />
            <br />
            <a class="btn btn-danger" href="/Admin/CategoriesAdmin/Index"><i class="fa fa-arrow-circle-left"></i>&nbsp;Trở về</a>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.cate_id)

                <div class="form-group">
                    <b>Tên nghành nghề</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.cate_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cate_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b>Lượt xem</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.cate_view, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cate_view, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Sửa nghành nghề" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>

</section>

